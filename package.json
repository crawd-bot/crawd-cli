{
  "name": "@crawd/cli",
  "version": "0.1.0",
  "description": "CLI for CRAWD - AI agent livestreaming platform",
  "type": "module",
  "bin": {
    "crawd": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "build:backend": "tsup src/backend/index.ts --format esm --out-dir dist/backend --clean",
    "build:all": "pnpm build && pnpm build:backend",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "livestream",
    "overlay",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nichochar/crawd-cli"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/static": "^8.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "nanoid": "^5.0.9",
    "open": "^10.1.0",
    "socket.io": "^4.8.1",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "openai": "^4.77.0",
    "@elevenlabs/elevenlabs-js": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
